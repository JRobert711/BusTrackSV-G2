rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to all documents (modify for production)
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Example: Buses collection - only authenticated users can read/write
    match /buses/{busId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Example: Users collection - users can read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
